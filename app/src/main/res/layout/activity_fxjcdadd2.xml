<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.administrator.jianguanxitong.gyqy.GYQYAlertActivity">
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="名称："
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/fxjcdadd_et_name"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="地址："
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/fxjcdadd_et_adress"
                android:layout_width="0dp"
                android:layout_weight="7"

                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="联系人："
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/fxjcdadd_et_lxr"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />
            <TextView
                android:text="电话："
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/fxjcdadd_et_lxrtelephone"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-----------------监测员信息---------------"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="姓名："
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/fxjcdadd_et_jcyname1"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />
            <TextView
                android:text="电  话："
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/fxjcdadd_et_jcytelephone1"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="姓名："
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/fxjcdadd_et_jcyname2"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />
            <TextView
                android:text="电  话："
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/fxjcdadd_et_jcytelephone2"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="姓名："
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/fxjcdadd_et_jcyname3"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />
            <TextView
                android:text="电  话："
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/fxjcdadd_et_jcytelephone3"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="备注："
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/fxjcdadd_et_bate"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <Button
        android:id="@+id/fxjcdadd_bt_add"
        android:text="保存添加"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>